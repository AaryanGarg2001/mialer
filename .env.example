# Production Environment Configuration
# IMPORTANT: This file should be created with actual production values
# and should never be committed to version control

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://appuser:apppassword123@mongodb:27017/email_summarizer_prod
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=CHANGE_ME_IN_PRODUCTION

# JWT Configuration
JWT_SECRET=CHANGE_ME_TO_A_VERY_SECURE_SECRET_IN_PRODUCTION
JWT_EXPIRES_IN=7d

# Google OAuth Configuration (Production values)
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/google/callback

# AI Service Configuration
OPENAI_API_KEY=your-production-openai-api-key
ANTHROPIC_API_KEY=your-production-anthropic-api-key
AI_PROVIDER=openai

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting (More restrictive for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Processing
DAILY_SUMMARY_TIME=08:00
MAX_EMAILS_PER_SUMMARY=20
SUMMARY_BATCH_SIZE=10

# CORS Configuration (Production domains)
ALLOWED_ORIGINS=https://yourdomain.com,chrome-extension://your-production-extension-id

# Redis Configuration (if using Redis)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Security Headers
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/certs/server.key

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-for-error-tracking
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password